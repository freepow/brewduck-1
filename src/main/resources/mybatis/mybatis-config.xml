<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN" "HTTP://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
    <!-- Difinition of myBatis Configuration -->
    <settings>
        <setting name="cacheEnabled"        value="false" />
        <setting name="useGeneratedKeys"    value="true"  />
        <setting name="defaultExecutorType" value="REUSE" />
    </settings>

    <!-- Difinition of MAPPER Alias -->
    <typeAliases>
        <typeAlias type="com.brewduck.web.domain.Account"     alias="Account"     />
        <typeAlias type="com.brewduck.web.domain.User"        alias="User"        />
        <typeAlias type="com.brewduck.web.domain.Style"       alias="Style"       />
        <typeAlias type="com.brewduck.web.domain.Profile"     alias="Profile"     />
        <typeAlias type="com.brewduck.web.domain.Common"      alias="Common"      />
        <typeAlias type="com.brewduck.web.domain.Fermentable" alias="Fermentable" />
        <typeAlias type="com.brewduck.web.domain.Recipe"      alias="Recipe"      />
        <typeAlias type="com.brewduck.web.domain.Hop"         alias="Hop"         />
        <typeAlias type="com.brewduck.web.domain.Yeast"       alias="Yeast"       />
        <typeAlias type="com.brewduck.web.domain.Misc"        alias="Misc"        />
    </typeAliases>
</configuration>