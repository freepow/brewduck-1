<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="Misc">

    <sql id="Misc.selectMisc">
        SELECT
               name             name
              ,korean_name      koreanName
              ,version          version
              ,type             type
              ,misc_use         miscUse
              ,time             time
              ,amount           amount
              ,amount_is_weight amountIsWeight
              ,use_for          useFor
              ,notes            notes
              ,insert_id        insertId
              ,insert_date      insertDate
              ,update_id        updateId
              ,update_date      updateDate
              ,delete_id        deleteId
              ,delete_date      deleteDate
          FROM brewduckdb.MISC
    </sql>

    <sql id="Misc.selectRecipeMisc">
        SELECT
               b.name             name
              ,b.korean_name      koreanName
              ,b.version          version
              ,b.type             type
              ,b.misc_use         miscUse
              ,b.time             time
              ,b.amount           amount
              ,b.amount_is_weight amountIsWeight
              ,b.use_for          useFor
              ,b.notes            notes
              ,b.insert_id        insertId
              ,b.insert_date      insertDate
              ,b.update_id        updateId
              ,b.update_date      updateDate
              ,b.delete_id        deleteId
              ,b.delete_date      deleteDate
          FROM brewduckdb.RECIPE_MISC a
              ,brewduckdb.MISC b
         WHERE a.misc_name = b.name
    </sql>

    <select id="Misc.selectMiscList" parameterType="Misc" resultType="Misc">
        <!-- 맥주 기타 재료 목록 조회 -->
        <include refid="Misc.selectMisc" />
        WHERE delete_id IS NULL
    </select>

    <select id="Misc.selectRecipeMiscList" parameterType="Misc" resultType="Misc">
        <!-- 맥주 레시피 기타 재료 목록 조회 -->
        <include refid="Misc.selectMisc" />
          AND a.name = #{name}
          AND b.delete_id IS NULL
    </select>

    <select id="Misc.selectRecipeMiscList" parameterType="Misc" resultType="Misc">
        <!-- 맥주 기타 재료 목록 조회 -->
        <include refid="Misc.selectRecipeMisc" />
          AND a.name = #{name}
          AND b.delete_id IS NULL
    </select>

    <select id="Misc.selectMiscDetail" parameterType="Misc" resultType="Misc">
        <!-- 맥주 기타 재료 상세 조회 -->
        <include refid="Misc.selectMisc" />
        WHERE delete_id IS NULL
        <if test="name != null">
            AND name = #{name}
        </if>
        <if test="type != null">
            AND type = #{type}
        </if>
    </select>

    <insert id="Misc.insertMisc" parameterType="Misc">
        <!-- 맥주 기타 재료 저장 -->
        INSERT INTO brewduckdb.MISC (
             name            
            ,korean_name     
            ,version         
            ,type            
            ,misc_use        
            ,time            
            ,amount          
            ,amount_is_weight
            ,use_for         
            ,notes           
            ,insert_id       
            ,insert_date     
            ,update_id       
            ,update_date     
            ,delete_id       
            ,delete_date     
        ) VALUES (
             #{name}
            ,#{koreanName}
            ,#{version}
            ,#{type}
            ,#{miscUse}
            ,#{time}
            ,#{amount}
            ,#{amountIsWeight}
            ,#{useFor}
            ,#{notes}
            ,#{insertId}
            ,now()
        )
    </insert>

    <update id="updateMisc" parameterType="Misc">
        <!-- 맥주 기타 재료 수정 -->
        UPDATE brewduckdb.MISC
        <trim prefix="SET" suffixOverrides=",">
            <if test="koreanName != null">
                korean_name = #{koreanName},
            </if>
            <if test="version != null">
                version = #{version}
            </if>
            <if test="type != null">
                type = #{type}
            </if>
            <if test="miscUse != null">
                misc_use = #{miscUse}
            </if>
            <if test="time != null">
                time = #{time}
            </if>
            <if test="amount != null">
                amount = #{amount}
            </if>
            <if test="amountIsWeight != null">
                amount_is_weight = #{amountIsWeight}
            </if>
            <if test="useFor != null">
                use_for = #{useFor}
            </if>
            <if test="notes != null">
                notes = #{notes}
            </if>
            <if test="updateId != null">
                update_id = #{updateId},
            </if>
            <if test="updateId != null">
                update_date = now()
            </if>
        </trim>
        WHERE name = #{name}
    </update>

    <update id="deleteMisc" parameterType="Misc">
        <!-- 맥주 기타 재료 삭제 -->
        UPDATE brewduckdb.MISC
           SET delete_id = #{deleteId}
              ,delete_date = now()
         WHERE name = #{name}
    </update>

</mapper>
