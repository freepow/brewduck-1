<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="Profile">

    <select id="Profile.selectPopularTalent"
            resultType="Profile">
            select sysdate form dual
    </select>


    <select id="Profile.selectProfile"
            parameterType="Profile"
            resultType="Profile">
        <!-- 회원 정보 목록 조회 -->
        SELECT id
        ,name
        ,email
        ,password
        FROM profile
        WHERE 1 = 1
        <if test="accountId != 0">
            AND account_id = #{accountId}
        </if>

    </select>

    <select id="Profile.selectProfileId"
            parameterType="Profile"
            resultType="int">
        <!-- 회원 정보 목록 조회 -->
        SELECT id
        FROM profiles
        WHERE 1 = 1
        <if test="accountId != 0">
            AND account_id = #{accountId}
        </if>

    </select>

    <select id="Profile.selectProfileCnt"
            parameterType="Profile"
            resultType="int">
        SELECT count(1) profileCnt
          FROM profiles
         WHERE ROWNUM = 1
        <if test="accountId != 0">
            AND account_id = #{accountId}
        </if>
    </select>

    <select id="Profile.selectProfileList"
            parameterType="Profile"
            resultType="Profile">
        <!-- 회원 정보 목록 조회 -->
        SELECT id
        ,name
        ,email
        ,password
        FROM account
        WHERE 1 = 1
        <if test="accountId != 0">
            AND account_id = #{accountId}
        </if>
    </select>

    <insert id="Profile.insertProfile"
            parameterType="Profile">
        <!-- 프로필 생성 -->
        INSERT INTO profiles (
        id
        ,account_id
        ) values (
        SEQ_PROFILE.NEXTVAL
        ,#{accountId}
        )
    </insert>

</mapper>