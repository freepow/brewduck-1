<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="Style">

    <sql id="Style.selectStyle">
        SELECT
               name               name,
               korean_name        koreanName,
               category           category,
               version            version,
               category_number    categoryNumber,
               style_letter       styleLetter,
               style_guide        styleGuide,
               type               type,
               og_min             ogMin,
               og_max             ogMax,
               fg_min             fgMin,
               fg_max             fgMax,
               ibu_min            ibuMin,
               ibu_max            ibuMax,
               color_min          colorMin,
               color_max          colorMax,
               carb_min           carbMin,
               carb_max           carbMax,
               abv_min            abvMin,
               abv_max            abvMax,
               notes              notes,
               profile            profile,
               ingredients        ingredients,
               examples           examples,
               insert_id          insertId,
               insert_date        insertDate,
               update_id          updateId,
               update_date        updateDate,
               delete_id          deleteId,
               delete_date        deleteDate
          FROM brewduckdb.STYLEw
    </sql>

    <select id="Style.selectStyleList" parameterType="Style" resultType="Style">
        <!-- 맥주 스타일 목록 조회 -->
        <include refid="Style.selectStyle" />
        WHERE delete_id IS NULL
    </select>

    <select id="Style.selectStyleDetail" parameterType="Style" resultType="Style">
        <!-- 맥주 스타일 상세 조회 -->
        <include refid="Style.selectStyle" />
        WHERE delete_id IS NULL
        <if test="name != null">
            AND name = #{name}
        </if>
        <if test="category != null">
            AND category = #{category}
        </if>
        <if test="type != null">
            AND type = #{type}
        </if>
    </select>

    <insert id="Style.insertStyle" parameterType="Style">
        <!-- 맥주 스타일 저장 -->
        INSERT INTO brewduckdb.STYLE (
             name
            ,korean_name
            ,version
            ,category
            ,category_number
            ,style_letter
            ,style_guide
            ,type
            ,og_min
            ,og_max
            ,fg_min
            ,fg_max
            ,ibu_min
            ,ibu_max
            ,color_min
            ,color_max
            ,carb_min
            ,carb_max
            ,abv_min
            ,abv_max
            ,notes
            ,profile
            ,ingredients
            ,examples
            ,insert_id
            ,insert_date
        ) VALUES (
             #{name}
            ,#{koreanName}
            ,'1'
            ,#{category}
            ,#{categoryNumber}
            ,#{styleLetter}
            ,'BJCP 2008'
            ,#{type}
            ,#{ogMin}
            ,#{ogMax}
            ,#{fgMin}
            ,#{fgMax}
            ,#{ibuMin}
            ,#{ibuMax}
            ,#{colorMin}
            ,#{colorMax}
            ,#{carbMin}
            ,#{carbMax}
            ,#{abvMin}
            ,#{abvMax}
            ,#{notes}
            ,#{profile}
            ,#{ingredients}
            ,#{examples}
            ,#{insertId}
            ,now()
        )
    </insert>

    <update id="updateStyle" parameterType="Style">
        <!-- 맥주 스타일 수정 -->
        UPDATE brewduckdb.STYLE
        <trim prefix="SET" suffixOverrides=",">
            <if test="koreanName != null">
                korean_name = #{koreanName},
            </if>
            <if test="category != null">
                category = #{category},
            </if>
            <if test="categoryNumber != null">
                category_number = #{categoryNumber},
            </if>
            <if test="styleLetter != null">
                style_letter = #{styleLetter},
            </if>
            <if test="type != null">
                type = #{type},
            </if>
            <if test="ogMin != null">
                og_min = #{ogMin},
            </if>
            <if test="ogMax != null">
                og_max = #{ogMax},
            </if>
            <if test="fgMin != null">
                fg_min = #{fgMin},
            </if>
            <if test="fgMax != null">
                fg_max = #{fgMax},
            </if>
            <if test="ibuMin != null">
                ibu_min = #{ibuMin},
            </if>
            <if test="ibuMax != null">
                ibu_max = #{ibuMax},
            </if>
            <if test="colorMin != null">
                color_min = #{colorMin},
            </if>
            <if test="colorMax != null">
                color_max = #{colorMax},
            </if>
            <if test="carbMin != null">
                carb_min = #{carbMin},
            </if>
            <if test="carbMax != null">
                carb_max = #{carbMax},
            </if>
            <if test="abvMin != null">
                abv_min = #{abvMin},
            </if>
            <if test="abvMax != null">
                abv_max = #{abvMax},
            </if>
            <if test="notes != null">
                notes = #{notes},
            </if>
            <if test="profile != null">
                profile = #{profile},
            </if>
            <if test="ingredients != null">
                ingredients = #{ingredients},
            </if>
            <if test="examples != null">
                examples = #{examples},
            </if>
            <if test="updateId != null">
                update_id = #{updateId},
            </if>
            <if test="updateId != null">
                update_date = now()
            </if>
        </trim>
        WHERE name = #{name}
    </update>

    <update id="deleteStyle" parameterType="Style">
        <!-- 맥주 스타일 삭제 -->
        UPDATE brewduckdb.STYLE
           SET delete_id = #{deleteId}
              ,delete_date = now()
         WHERE name = #{name}
    </update>


</mapper>
