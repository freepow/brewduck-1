<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE decorators>
<decorators defaultdir="/WEB-INF/views/decorators">
	<excludes>
		<pattern>/resource/*</pattern>
		<pattern>/service/*/*</pattern>
		<pattern>/service/*</pattern>

	</excludes>

	<decorator name="guest" page="guest.jsp">
        <pattern>/account/*</pattern>
	</decorator>

	<decorator name="default" page="default.jsp">
        <pattern>/index</pattern>
        <pattern>/help/*</pattern>
        <pattern>/help/faq</pattern>
        <pattern>/company/*</pattern>
        <pattern>/profile/*</pattern>
        <pattern>/recipe/*</pattern>
        <pattern>/</pattern>
	</decorator>

    <decorator name="default_mini" page="default_mini.jsp">
        <pattern>/recipe/*</pattern>
    </decorator>
</decorators>